
@page
@model BooksDemoRazor.Pages.EditModel
@{
        ViewData["Title"] = "Kitap bilgi güncelle";
}

<form method="post">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Book</h2>
            <hr/>
        </div>
        <div class="mb-3">
            Title :
            <input autofocus asp-for="Book.Title" type="text" name="title"/>
        </div>
        <div class="mb-3">
            PublishedYear :
            <input asp-for="Book.PublishedYear" type="number" name="publishedYear" class="form-control"/>
        </div>
        <button type="submit" style="width:150px" > SAVE</button>
    </div>
</form>
