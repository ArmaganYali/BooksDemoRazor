
@page
@model BooksDemoRazor.Pages.DeleteModel
@{
        ViewData["Title"] = "Kitap kayıt sil";
}

<form method="post">
    <input hidden asp-for="Book.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Book</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label>Title :</label>        
            <input disabled asp-for="Book.Title" type="text" name="title"/>
        </div>
        <div class="mb-3">
           <label>PublishedYear :</label> 
            <input disabled asp-for="Book.PublishedYear" type="number" name="publishedYear" class="form-control"/>
        </div>
        <button type="submit" style="width:150px" > DELETE </button>
    </div>
</form>
