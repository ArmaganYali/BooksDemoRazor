@page
@model BooksDemoRazor.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Kitaplar";
    if(TempData["basariliKayitGiris"]!= null)
    {
        <p class="text-success">@TempData["basariliKayitGiris"]</p>
    }
        if(TempData["kayitSilindi"]!= null)
    {
        <p class="text-danger">@TempData["kayitSilindi"]</p>
    }
}

<div id="benim" class="container">
    <div class="row align-items-center">
        <div class = "col-6">
            <h1 class=text-xl fs-1>Book List</h1>
            <a autofocus asp-page="create" class="btn btn-primary">CREATE</a>
        </div>
     </div>
        <div class ="col-1"></div>
        <div class="col-10 p-5">

<table class="table table-dark table-striped">
  <thead>
       <tr>
        <td width="18½">Id</td>
        <td width="98½">Title</td>
    </tr>
  </thead>
  <tbody>
      @foreach (var book in Model.Books)
{
    <tr>
        <td width=10%>@book.Id</td>
        <td width=50%>@book.Title</td>
        <td width=20%>@book.PublishedYear</td>
        <td width=20%>
            <div>
           <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil"></i></a>
             <a asp-page="Delete" asp-route-id="@book.Id" class="btn btn-primary mx-2"> <i class="bi bi-x-square-fill"></i></a> 
            </div>
            </td>
    </tr>
   
    
}

  </tbody>
</table>
</div>
<div class = "col-1"></div>
</div>